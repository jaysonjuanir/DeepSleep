<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- one such mapping can contain multiple entity mappings in the same package -->
<hibernate-mapping package="DeepSleep">

	<!-- Book-entity mapping -->
    <class name="com.person.model.Address" table="address">
        <id name="address_id" type="int" column="address_id">
      		<generator class="identity"/>
    	</id>
        <property name="address_street_number" column="address_street_number" type="string"/>
    	<property name="address_barangay" column="address_barangay" type="string"/>
		<property name="address_city" column="address_city" type="string"/>
		<property name="address_zipcode" column="address_zipcode" type="string"/>
    </class>

</hibernate-mapping>