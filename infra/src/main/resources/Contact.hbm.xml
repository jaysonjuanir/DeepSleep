<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- one such mapping can contain multiple entity mappings in the same package -->
<hibernate-mapping package="DeepSleep">

	<!-- Book-entity mapping -->
    <class name="com.person.model.Contact" table="contact">
        <id name="contact_id" type="int" column="contact_id">
      		<generator class="identity"/>
    	</id>
        <property name="contact_type" column="contact_type" type="string"/>
    	<property name="contact_value" column="contact_value" type="string"/>
		<many-to-one name="contact_person" column="person_id" class="com.person.model.Person" not-null="true" fetch="select"/>
    </class>
</hibernate-mapping>