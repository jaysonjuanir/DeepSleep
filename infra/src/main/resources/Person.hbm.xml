<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- one such mapping can contain multiple entity mappings in the same package -->
<hibernate-mapping package="DeepSleep">

	<!-- Book-entity mapping -->
    <class name="com.person.model.Person" table="person">
        <id name="person_id" type="int" column="person_id">
      		<generator class="identity"/>
    	</id>
        <property name="person_last_name" column="person_last_name" type="string"/>
    	<property name="person_middle_name" column="person_middle_name" type="string"/>
		<property name="person_first_name" column="person_first_name" type="string"/>
		<property name="person_suffix" column="person_suffix" type="string"/>
		<property name="person_title" column="person_title" type="string"/>
		<property name="person_GWA" column="gwa" type="double"/>
		<many-to-one name="address" column="address_id" unique="true" class="com.person.model.Address" not-null="true" cascade="all"/>
		<set name="person_contact" inverse="true" cascade="all" lazy="true" fetch="select">
			<key column="person_id" not-null="true"/>
			<one-to-many class="com.person.model.Contact"/>
      	</set>
		<set name="roles" cascade="save-update" table="personrole">
			<key column="person_id"/>
			<many-to-many column="role_id" class="com.person.model.Roles"/>
      	</set>
